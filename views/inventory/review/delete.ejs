<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>
    
    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>

    <%- messages() %>

    <%- grid %>
    <%- reviewGrid %>

    <% if (locals.loggedin) { %>
        <h3>Add Your Own Review</h3>
        <div class="add-review-form">
            <form action="/inv/review/add" method="POST">
                <label for="screenName">Screen Name:</label><br>
                <input type="text" id="screenName" name="screenName" required readonly value="<%= accountData.account_firstname[0] + accountData.account_lastname %>"><br>
                <label for="review_text">Review:</label><br>
                <textarea id="review_text" name="review_text" required rows="4"><%= locals.review_text %></textarea><br>
                <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">
                <input type="hidden" name="account_id" value="<%= locals.account_id %>">                
                <input type="submit" value="Submit Review">
            </form>
        </div>
        <% } else { %>
        <p id="reviewLogin">You must <a href="/account/login">login</a> to write a review.</p>
        <% } %>